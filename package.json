{
  "name": "slippi-light",
  "version": "1.0.1",
  "main": "main.js",
  "author": "b3nd3r_ssbm",
  "description": "GPL-3.0-or-later",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "productName": "Slippi Light",
    "appId": "com.b3nd3rssbm.slippilight",
