{
  "name": "slippi-light",
  "version": "1.4.1",
  "main": "main.js",
  "author": "b3nd3r_ssbm",
  "description": "GPL-3.0-or-later",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "productName": "Slippi Light",
    "appId": "com.b3nd3rssbm.slippilight",
    "files": [
      "index.html",
      "main.js",
      "p5.min.js",
      "package.json",
      "actionStates.csv",
	  "setup.txt"
    ],
	"artifactName": "Slippi-Light-${version}-${os}.${ext}",
    "mac": {
      "category": "your.app.category.type",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": "portable",
      "publish": [
        "github"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "dmg": {
      "icon": "./icon.png"
    },
    "nsis": {
      "unicode": "false"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/b3nd3r-ssbm/slippi-light.git"
  },
  "dependencies": {
    "@slippi/slippi-js": "^5.0.2"
  },
  "devDependencies": {
    "electron-builder": "^22.7.0",
    "electron": "^9.1.1"
  }
}
